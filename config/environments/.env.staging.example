# Staging Environment Variables
# Copy this file to .env.staging and fill in the values

# ==============================================
# SUPABASE CONFIGURATION
# ==============================================
VITE_SUPABASE_URL=https://your-staging-project.supabase.co
VITE_SUPABASE_PUBLISHABLE_KEY=your-staging-anon-key
VITE_SUPABASE_PROJECT_ID=your-staging-project-id

# ==============================================
# STRIPE CONFIGURATION (Test Mode)
# ==============================================
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_test_key
STRIPE_SECRET_KEY=sk_test_your_test_secret
STRIPE_WEBHOOK_SECRET=whsec_your_test_webhook_secret

# ==============================================
# AMADEUS API (Test Environment)
# ==============================================
AMADEUS_API_KEY=your_test_amadeus_key
AMADEUS_API_SECRET=your_test_amadeus_secret
USE_PROD_APIS=false

# ==============================================
# DOMAIN CONFIGURATION
# ==============================================
DOMAIN_NAME=https://staging.chyeap.com

# ==============================================
# EMAIL CONFIGURATION (Test)
# ==============================================
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USERNAME=your_mailtrap_username
SMTP_PASSWORD=your_mailtrap_password
SMTP_FROM_NAME=ChyeapFlights Staging
SMTP_FROM_EMAIL=noreply-staging@chyeap.com

# ==============================================
# FX API
# ==============================================
FX_API_KEY=your_fx_api_key

# ==============================================
# FEATURE FLAGS
# ==============================================
VITE_DEBUG_MODE=true
VITE_ANALYTICS_ENABLED=false
